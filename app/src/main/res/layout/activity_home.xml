<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home">

    <TextView
        android:id="@+id/logo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textColor="@color/green"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.06999999" />

    <TextView
        android:id="@+id/description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="6dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="@string/description"
        android:textAlignment="center"
        android:textColor="@color/search_colour"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/logo"
        app:layout_constraintTop_toBottomOf="@+id/logo" />

    <SearchView
        android:id="@+id/search"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="8dp"
        android:iconifiedByDefault="false"
        android:queryHint="search"
        android:textAlignment="textStart"
        app:layout_constraintEnd_toEndOf="@+id/description"
        app:layout_constraintStart_toStartOf="@+id/description"
        app:layout_constraintTop_toBottomOf="@+id/description" />

    <HorizontalScrollView
        android:id="@+id/scrollview"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:fillViewport="true"
        android:paddingStart="10dp"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="@+id/description"
        app:layout_constraintStart_toStartOf="@+id/description"
        app:layout_constraintTop_toBottomOf="@+id/search"
        tools:ignore="RtlSymmetry">


        <LinearLayout
            android:id="@+id/tagContainer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <!-- Tag 1: Infrastructure -->
            <TextView
                android:id="@+id/infrastructure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:background="@drawable/tag_background"
                android:gravity="center"
                android:paddingLeft="18dp"
                android:paddingTop="10dp"
                android:paddingRight="18dp"
                android:paddingBottom="10dp"
                android:text="@string/Infrastructure"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <!-- Tag 2: Health -->
            <TextView
                android:id="@+id/health"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:background="@drawable/tag_background"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="20dp"
                android:paddingBottom="10dp"
                android:text="@string/Health"
                android:textColor="@android:color/white"
                android:textSize="14sp" />


            <!-- Tag 3: Water -->
            <TextView
                android:id="@+id/water"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:background="@drawable/tag_background"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="20dp"
                android:paddingBottom="10dp"
                android:text="@string/Water"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <!-- Tag 3: Agriculture -->
            <TextView
                android:id="@+id/Agriculture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:background="@drawable/tag_background"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="20dp"
                android:paddingBottom="10dp"
                android:text="@string/Agriculture"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <!-- Tag 3: Education -->
            <TextView
                android:id="@+id/Education"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tag_background"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="20dp"
                android:paddingBottom="10dp"
                android:text="@string/Education"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

        </LinearLayout>
    </HorizontalScrollView>

    <ScrollView
        android:layout_width="370dp"
        android:layout_height="match_parent"
        android:layout_marginTop="350dp"
        android:fillViewport="true"
        android:orientation="vertical"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="@+id/description"
        app:layout_constraintStart_toStartOf="@+id/description"
        app:layout_constraintTop_toBottomOf="@+id/scrollview">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/card1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                app:cardCornerRadius="10dp"
                app:contentPadding="20dp"
                app:contentPaddingLeft="20dp"
                app:contentPaddingRight="20dp">


                <!-- Parent Vertical LinearLayout to align both LinearLayouts below each other -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- First LinearLayout (Title + Tag) -->

                    <LinearLayout
                        android:id="@+id/section1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/Kibera"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/Kibera_Road"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <!-- Space Between the Two textview -->
                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/card1_tag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/light_bg"
                            android:gravity="center"
                            android:paddingLeft="15dp"
                            android:paddingTop="5dp"
                            android:paddingRight="15dp"
                            android:paddingBottom="5dp"
                            android:text="@string/Infrastructure"
                            android:textColor="@color/green"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </LinearLayout>


                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />


                    <!-- Second LinearLayout -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/location"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawablePadding="10dp"
                            android:text="@string/County1"
                            android:textColor="@color/black"
                            android:textSize="19sp"
                            app:drawableLeftCompat="@drawable/ic_location" />

                        <TextView
                            android:id="@+id/budget"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:drawablePadding="10dp"
                            android:text="@string/KES_25M"
                            android:textColor="@color/black"
                            android:textSize="19sp"
                            app:drawableLeftCompat="@drawable/ic_wallet_24" />

                        <TextView
                            android:id="@+id/date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:drawablePadding="10dp"
                            android:text="@string/calender1"
                            android:textColor="@color/black"
                            android:textSize="19sp"
                            app:drawableStartCompat="@android:drawable/ic_menu_my_calendar" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                app:contentPadding="20dp"
                app:contentPaddingLeft="20dp"
                app:contentPaddingRight="20dp">


                <!-- Parent Vertical LinearLayout to align both LinearLayouts below each other -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- First LinearLayout (Title + Tag) -->
                    <LinearLayout
                        android:id="@+id/section2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/Mombasa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/Mombasa"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <!-- Space Between the Two textview -->
                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/card2_tag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/light_bg"
                            android:gravity="center"
                            android:paddingLeft="15dp"
                            android:paddingTop="5dp"
                            android:paddingRight="15dp"
                            android:paddingBottom="5dp"
                            android:text="@string/Health"
                            android:textColor="@color/green"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </LinearLayout>


                    <!-- Second LinearLayout -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/location2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawablePadding="10dp"
                            android:text="@string/County2"
                            android:textColor="@color/black"
                            android:textSize="19sp"
                            app:drawableStartCompat="@drawable/ic_location" />

                        <TextView
                            android:id="@+id/budget2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:drawablePadding="10dp"
                            android:text="@string/KES_15M"
                            android:textColor="@color/black"
                            android:textSize="19sp"
                            app:drawableStartCompat="@drawable/ic_wallet_24" />

                        <TextView
                            android:id="@+id/date2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:drawablePadding="10dp"
                            android:text="@string/calender2"
                            android:textColor="@color/black"
                            android:textSize="19sp"
                            app:drawableStartCompat="@android:drawable/ic_menu_my_calendar" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                app:contentPadding="20dp"
                app:contentPaddingLeft="20dp"
                app:contentPaddingRight="20dp">


                <!-- Parent Vertical LinearLayout to align both LinearLayouts below each other -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- First LinearLayout (Title + Tag) -->
                    <LinearLayout
                        android:id="@+id/section3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/Rural"
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:text="@string/Rural"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <!-- Space Between the Two textview -->
                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/card3_tag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/light_bg"
                            android:gravity="center"
                            android:paddingLeft="15dp"
                            android:paddingTop="5dp"
                            android:paddingRight="15dp"
                            android:paddingBottom="5dp"
                            android:text="@string/Education"
                            android:textColor="@color/green"
                            android:textSize="15sp" />
                    </LinearLayout>


                    <!-- Second LinearLayout -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/location3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawablePadding="10dp"
                            android:text="@string/County3"
                            android:textColor="@color/black"
                            android:textSize="19sp"
                            app:drawableLeftCompat="@drawable/ic_location" />

                        <TextView
                            android:id="@+id/budget3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:drawablePadding="10dp"
                            android:text="@string/KES_45M"
                            android:textColor="@color/black"
                            android:textSize="19sp"
                            app:drawableStartCompat="@drawable/ic_wallet_24" />

                        <TextView
                            android:id="@+id/date3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:drawablePadding="10dp"
                            android:text="@string/calender3"
                            android:textColor="@color/black"
                            android:textSize="19sp"
                            app:drawableStartCompat="@android:drawable/ic_menu_my_calendar"
                            tools:ignore="RtlHardcoded" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>






</androidx.constraintlayout.widget.ConstraintLayout>